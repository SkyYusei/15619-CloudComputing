import javax.xml.soap.Text;

public class mapper {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String text = "The default ''action'' is to print the record.";
		String[] a = text.split("[^a-zA-Z]+");
//		for(String b : a){
//			System.out.println(b);
//		}

		for(int i = 1; i <6; i++){
			for(int k = 0; k < a.length+1 - i; k++ ){
				StringBuilder str = new StringBuilder("");
				for(int j = 0; j < i; j++){
					if(j>0){
						str = str.append(" ");
						str = str.append(a[k+j]);
					}
					else
						str = str.append(a[k+j]);
				}
				System.out.println((k+1)+"\t"+str.toString().toLowerCase());
			}
		}
	}

}
